@model List<lesson05.Models.ViewModels.BookVM>


<div class="rounded bg-dark py-4 my-5">
    <h3 class="text-light">@ViewBag.PageTitle</h3>
</div>
@foreach (var book in Model)
{
    <div class="col-md-6">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col-6 p-4 d-flex flex-column position-static">

                <a href="/Kitap/@book.Id" class="text-decoration-none mb-5 fs-5 text-dark ">
                    @book.Adi
                </a>

                <div class="mb-1 text-body-secondary">@book.YayinTarihi</div>
                <span class="badge text-bg-dark align-self-start">@book.Dili</span>
                <strong class="d-inline-block mb-2 fs-7 text-primary-emphasis">@book.YazarAdi</strong>

            </div>
            <div class="col-6 d-none d-lg-block">
                <a href="/Kitap/@book.Id">
                    <img src="/images/book/@book.Resim" class="img-fluid" alt="" srcset="">
                </a>
            </div>
        </div>
    </div>
}
